{
    "env": {
        "browser": true,
        "es6": true
    },
    "overrides": [
        {
            "files": [
                "src/**/*.ts"
            ],
            "extends": [
                "standard-with-typescript",
                "prettier"
            ],
            "parserOptions": {
                "ecmaVersion": "latest",
                "sourceType": "module"
            },
            "rules": {
                "@typescript-eslint/naming-convention": [
                    "warn"
                ],
                "function-call-argument-newline": [
                    "error",
                    "always"
                ],
                "function-paren-newline": [
                    "error"
                ],
                "lines-between-class-members": [
                    "error",
                    "always"
                ],
                "semi": [
                    "error",
                    "always"
                ]
            }
        }
    ]
}